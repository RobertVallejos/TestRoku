      <Border id="border" translation="[0, -4]"/>

      <Group>
        <Label id="title" />
        <Label id="subtitle" />
        <Label id="description" width="680" maxlines="3" lineSpacing="-2" wrap="true"/>
      </Group>
  </children>

</component>